{
  "manifestVersion": 5,
  "id": "nrj.layer-utility",
  "name": "Layer Utilities",
  "version": "1.0.0",
  "main": "index.html",
  "author": "Nathan Jones",
  "description": "A utility plugin to manage layers. Rename, search and replace, delete empty layers and add a suffix or prefix",
  "host": {
    "app": "PS",
    "minVersion": "23.3.0",
    "data": {
      "apiVersion": 2,
      "loadEvent": "use"
    }
  },
  "icons": [
    {
      "width": 23,
      "height": 23,
      "path": "icons/icon.png",
      "scale": [1, 2],
      "theme": ["darkest", "dark", "light", "lightest", "all"]
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "nrj.layer-utility",
      "label": {
        "default": "Layer Utilities"
      },
      "minimumSize": {
        "width": 450,
        "height": 400
      },
      "maximumSize": {
        "width": 450,
        "height": 2000
      },
      "preferredDockedSize": {
        "width": 450,
        "height": 600
      },
      "preferredFloatingSize": {
        "width": 450,
        "height": 800
      },
      "icons": [
        {
          "width": 23,
          "height": 23,
          "path": "icons/icon.png",
          "scale": [1, 2],
          "theme": ["darkest", "dark", "light", "lightest", "all"]
        }
      ]
    }
  ],
  "requiredPermissions": {
    "localFileSystem": "request"
  },
  "featureFlags": {
    "enableAlerts": true
  }
}
